package java0623;

import java.util.Scanner;

public class ex02 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Java 점수 입력 :");
		int javaScore=sc.nextInt();
		System.out.println("Web 점수 입력 :");
		int webScore=sc.nextInt();
		System.out.println("Android 점수 입력 :");
		int anScore=sc.nextInt();
		System.out.println("합계 :"+(javaScore+webScore+anScore));
		System.out.println("평균 :"+(javaScore+webScore+anScore)/3);
		
		
		
	}
}
